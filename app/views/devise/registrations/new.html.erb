<div id="sigup-content" class="container">
  <div class="row">
    <div id="title" class="col-md-12 my-3" >
      <h1 class="text-center text-main font-weight-bold">Fotobook Signup</h1>
    </div>
    <div id="social-media" class="col-md-12 mb-3">
      <div class="w-self-25 d-flex justify-content-around mx-auto border rounded">
        <div class="login-social-icon"><a href="#"><%=image_tag('google.jpg')%></a></div>
        <div class="login-social-icon"><a href="#"><%=image_tag('fb.png')%></a></div>
        <div class="login-social-icon"><a href="#"><%=image_tag('twitter.png')%></a></div>
    </div>
    </div>
    <div  class="col-md-12" id="swap-login-from-data">
      <div class="w-self-25 mx-auto bg-f8f8f8 pb-3">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :email %> <br/>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control border-bottom-0" %>
          </div>
          <div class="field">
            <%= f.label t('first_name') %><br />
            <%= f.text_field :first_name, class: "form-control"%>
          </div>
          <div class="field">
            <%= f.label t('last_name') %><br />
            <%= f.text_field :last_name, class: 'form-control'%>
          </div>

          <div class="field">
            <%= f.label t('new_password') %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label t('confirm_password') %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"%>
          </div>

          <div class="actions text-center mb-3">
            <%= f.submit "Sign up", class: "btn bg-main text-white px-4"%>
          </div>
        <% end %>
      </div>
    </div>
  <script type="text/javascript">
    $("#from-data").validate({
        rules: {
          firstname: {
            required: true,
            maxlength: 25
          },
          lastname: {
            required: true,
            maxlength: 25
          },
          password: {
            required: true,
            maxlength: 64
          },
          confirmation: {
            required: true,
            maxlength: 25
          },
        }
      });
  </script>
  <%= render "devise/shared/links" %>
  </div>
</div>
